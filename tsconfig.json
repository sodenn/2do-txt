{
  "compilerOptions": {
    "target": "es6",
    "types": ["vite/client", "vitest/globals", "vite-plugin-pwa/client", "@types/wicg-file-system-access"],
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020.String",
      "esnext",
      "webworker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
