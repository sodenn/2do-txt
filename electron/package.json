{
  "name": "2do-txt",
  "version": "1.0.0",
  "description": "A todo.txt compatible task manager",
  "license": "GPL-3.0",
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "homepage": "https://github.com/sodenn/2do-txt",
  "main": "build/src/index.js",
  "scripts": {
    "build": "tsc && electron-rebuild",
    "electron:start-live": "node ./live-runner.js",
    "electron:start": "yarn build && electron --inspect=5858 ./",
    "electron:pack": "yarn build && electron-builder build --dir -c ./electron-builder.config.json",
    "electron:make": "yarn build && electron-builder build -c ./electron-builder.config.json -p always"
  },
  "dependencies": {
    "@capacitor-community/electron": "^4.0.3",
    "chokidar": "~3.5.2",
    "electron-is-dev": "~2.0.0",
    "electron-serve": "~1.1.0",
    "electron-unhandled": "~3.0.2",
    "electron-updater": "~4.3.9",
    "electron-window-state": "~5.0.3"
  },
  "devDependencies": {
    "electron": "~16.0.1",
    "electron-builder": "~22.13.1",
    "electron-rebuild": "~3.2.5",
    "typescript": "~4.5.2"
  },
  "keywords": [
    "capacitor",
    "electron"
  ]
}
