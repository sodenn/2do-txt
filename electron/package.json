{
  "name": "2do-txt",
  "version": "0.0.0-development",
  "description": "todo.txt-compatible task manager",
  "license": "GPL-3.0",
  "private": true,
  "packageManager": "yarn@3.2.2",
  "engines": {
    "yarn": ">=3.2.2"
  },
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "homepage": "https://github.com/sodenn/2do-txt",
  "main": "build/src/index.js",
  "scripts": {
    "build": "electron-rebuild",
    "electron:start-live": "node ./live-runner.js",
    "electron:start": "yarn build && electron --inspect=5858 ./",
    "electron:pack": "yarn build && electron-builder -c ./electron-builder.config.json -p never",
    "electron:make": "yarn build && electron-builder -c ./electron-builder.config.json -p always"
  },
  "dependencies": {
    "@capacitor-community/electron": "4.1.2",
    "chokidar": "3.5.3",
    "electron-is-dev": "2.0.0",
    "electron-serve": "1.1.0",
    "electron-unhandled": "4.0.1",
    "electron-updater": "5.2.1",
    "electron-window-state": "5.0.3"
  },
  "devDependencies": {
    "electron": "20.1.0",
    "electron-builder": "23.3.3",
    "electron-notarize": "1.2.1",
    "electron-rebuild": "3.2.9",
    "typescript": "4.8.2"
  },
  "keywords": [
    "capacitor",
    "electron"
  ]
}
