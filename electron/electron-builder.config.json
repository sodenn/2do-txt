{
  "productName": "2do.txt",
  "appId": "dev.sodenn.todotxt",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "category": "Utility",
    "target": ["deb", "rpm", "tar.gz"],
    "icon": "assets/appIcon.png"
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.png"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "hardenedRuntime" : true,
    "gatekeeperAssess": false,
    "entitlements": "./mac/entitlements.mas.plist",
    "entitlementsInherit": "./mac/entitlements.mas.plist",
    "target": ["dmg", "zip"],
    "icon": "assets/appIcon.png"
  },
  "afterSign": "./afterSign.js"
}