  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --max-warnings=0 --ext .ts,.tsx",
    "format": "prettier --check ./src",
    "resources": "capacitor-resources -p ios",
    "cap:sync": "npx cap sync && yarn electron:sync",
    "ios:sync": "npx cap sync ios",
    "ios:start": "yarn build && yarn ios:sync && npx cap open ios",
    "ios:res": "cordova-res ios --skip-config --copy",
    "electron:sync": "npx cap sync @capacitor-community/electron",
    "electron:start": "yarn build && yarn electron:sync && npx cap open @capacitor-community/electron",
    "semantic-release": "semantic-release"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^3.3.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
