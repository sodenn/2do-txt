{
  "name": "2do-txt",
  "version": "1.10.0",
  "description": "todo.txt-compatible task manager",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "dependencies": {
    "@capacitor-community/electron": "^4.1.0",
    "@capacitor/clipboard": "^1.0.8",
    "@capacitor/core": "^3.4.3",
    "@capacitor/filesystem": "^1.1.0",
    "@capacitor/ios": "^3.4.3",
    "@capacitor/local-notifications": "^1.1.0",
    "@capacitor/network": "^1.0.7",
    "@capacitor/share": "^1.1.2",
    "@capacitor/splash-screen": "^1.2.2",
    "@capacitor/status-bar": "^1.0.8",
    "@capacitor/storage": "^1.2.5",
    "@date-io/date-fns": "^2.13.1",
    "@draft-js-plugins/editor": "^4.1.2",
    "@draft-js-plugins/mention": "^5.2.0",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.0",
    "@mui/lab": "^5.0.0-alpha.76",
    "@mui/material": "^5.6.1",
    "capacitor-rate-app": "^2.0.0",
    "clsx": "^1.1.1",
    "cordova-plugin-inappbrowser": "^5.0.0",
    "cordova-plugin-ios-keychain": "https://github.com/ionic-team/cordova-plugin-ios-keychain.git#adb566b",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.28.0",
    "draft-js": "^0.11.7",
    "dropbox": "^10.26.1",
    "file-saver": "^2.0.5",
    "i18next": "^21.6.14",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.0",
    "lodash.throttle": "^4.1.1",
    "notistack": "^2.0.3",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-dropzone": "^12.0.4",
    "react-i18next": "^11.16.2",
    "react-router-dom": "^6.2.2",
    "react-scripts": "4.0.3",
    "typeface-roboto": "^1.1.13"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "playwright test",
    "test:record": "playwright codegen localhost:3000",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --max-warnings=0 --ext .ts,.tsx",
    "format": "prettier --check ./src",
    "resources": "capacitor-resources -p ios",
    "cap:sync": "npx cap sync && yarn electron:sync",
    "ios:sync": "npx cap sync ios",
    "ios:start": "yarn build && yarn ios:sync && npx cap open ios",
    "ios:res": "cordova-res ios --skip-config --copy",
    "electron:sync": "npx cap sync @capacitor-community/electron",
    "electron:start": "yarn build && yarn electron:sync && npx cap open @capacitor-community/electron",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@awesome-cordova-plugins/.*)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^3.4.3",
    "@playwright/test": "^1.20.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^14.0.4",
    "@types/draft-js": "^0.11.9",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.43",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-dom": "^17.0.14",
    "cordova-res": "^0.15.4",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3"
  }
}
