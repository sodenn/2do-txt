  "name": "2do-txt",
  "version": "1.12.0",
  "description": "todo.txt-compatible task manager",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "dependencies": {
    "@capacitor-community/electron": "^4.1.0",
    "@capacitor/clipboard": "^1.0.8",
    "@capacitor/core": "^3.5.0",
    "@capacitor/filesystem": "^1.1.0",
    "@capacitor/ios": "^3.5.1",
    "@capacitor/keyboard": "^1.2.2",
    "@capacitor/local-notifications": "^1.1.0",
    "@capacitor/network": "^1.0.7",
    "@capacitor/share": "^1.1.2",
    "@capacitor/splash-screen": "^1.2.2",
    "@capacitor/status-bar": "^1.0.8",
    "@capacitor/storage": "^1.2.5",
    "@date-io/date-fns": "^2.13.1",
    "@emotion/css": "^11.9.0",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/lab": "^5.0.0-alpha.80",
    "@mui/material": "^5.6.4",
    "capacitor-rate-app": "^2.0.0",
    "cordova-plugin-inappbrowser": "^5.0.0",
    "cordova-plugin-ios-keychain": "https://github.com/ionic-team/cordova-plugin-ios-keychain.git#adb566b",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.28.0",
    "dropbox": "^10.29.0",
    "file-saver": "^2.0.5",
    "i18next": "^21.6.16",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.0",
    "jszip": "^3.9.1",
    "lodash.throttle": "^4.1.1",
    "notistack": "^2.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-dropzone": "^14.2.0",
    "react-i18next": "^11.16.7",
    "react-movable": "^3.0.4",
    "react-router-dom": "^6.3.0",
    "react-scripts": "4.0.3",
    "slate": "0.77.0",
    "slate-history": "^0.66.0",
    "slate-react": "0.78.1",
    "typeface-roboto": "^1.1.13"
  },
  "resolutions": {
    "react-error-overlay": "6.0.9"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "playwright test",
    "test:record": "playwright codegen localhost:3000",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --max-warnings=0 --ext .ts,.tsx",
    "format": "prettier --check ./src",
    "resources": "cordova-res ios --skip-config --copy",
    "cap:sync": "npx cap sync && yarn electron:sync",
    "ios:sync": "npx cap sync ios",
    "ios:start": "yarn build && yarn ios:sync && npx cap open ios",
    "ios:res": "cordova-res ios --skip-config --copy",
    "electron:sync": "npx cap sync @capacitor-community/electron",
    "electron:start": "yarn build && yarn electron:sync && npx cap open @capacitor-community/electron",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!react-movable/.*)"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^3.5.0",
    "@playwright/test": "^1.21.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^27.5.0",
    "@types/node": "^16.11.12",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "cordova-res": "^0.15.4",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.4"
  }
}
