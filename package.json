{
  "name": "2do-txt",
  "version": "1.18.0",
  "type": "module",
  "description": "todo.txt-compatible task manager",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "test": "vitest run",
    "e2e": "playwright test",
    "e2e-update": "playwright test screenshots.spec.ts --update-snapshots",
    "lint": "eslint . --max-warnings=0 --ext .ts,.tsx",
    "fmt:check": "prettier --check ./src",
    "fmt": "prettier --write ./src",
    "hygiene": "run-p typecheck lint fmt:check knip",
    "knip": "knip",
    "i18n": "i18next --config i18next-parser.config.js \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "cap:sync": "npx cap sync",
    "ios:sync": "npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:dev": "run-s build ios:sync ios:open",
    "ios:res": "cordova-res ios --skip-config --copy",
    "tauri": "tauri",
    "tauri:dev": "RUST_BACKTRACE=full npm run tauri dev",
    "semantic-release": "semantic-release"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
