{
  "name": "2do-txt",
  "version": "1.18.0",
  "type": "module",
  "description": "todo.txt-compatible task manager",
  "license": "GPL-3.0",
  "private": true,
  "author": {
    "name": "sodenn",
    "email": "mail@sodenn.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sodenn/2do-txt.git"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "run-s build preview",
    "test": "vitest run",
    "e2e": "playwright test",
    "e2e-update": "playwright test screenshots.spec.ts --update-snapshots",
    "lint": "eslint src",
    "fmt:check": "prettier --check ./src",
    "fmt": "prettier --write ./src",
    "hygiene": "run-p typecheck lint fmt:check knip",
    "knip": "knip",
    "i18n": "i18next --config i18next-parser.config.js \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "generate-icon-assets": "pwa-assets-generator",
    "generate-splash-assets": "pwa-asset-generator ./public/splash.svg ./public --index ./index.html --splash-only --path-override --background '#90CAF9'",
    "generate-pwa-assets": "run-p generate-icon-assets generate-splash-assets"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "6.3.1",
    "@dnd-kit/modifiers": "9.0.0",
    "@dnd-kit/sortable": "10.0.0",
    "@dnd-kit/utilities": "3.2.2",
    "@fontsource/inter": "5.1.0",
    "@formkit/auto-animate": "0.8.2",
    "@lexical/react": "0.21.0",
    "@lexical/utils": "0.21.0",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-tooltip": "1.1.6",
    "@radix-ui/react-visually-hidden": "1.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "file-saver": "2.0.5",
    "html-react-parser": "^5.1.12",
    "i18next": "24.1.2",
    "i18next-browser-languagedetector": "8.0.2",
    "i18next-http-backend": "3.0.1",
    "jszip": "3.10.1",
    "lexical": "0.21.0",
    "lexical-beautiful-mentions": "0.1.44",
    "lodash": "4.17.21",
    "lucide-react": "0.468.0",
    "marked": "15.0.4",
    "react": "19.0.0",
    "react-day-picker": "9.4.4",
    "react-dom": "19.0.0",
    "react-i18next": "15.2.0",
    "react-transition-group": "4.4.5",
    "tailwind-merge": "2.5.5",
    "tailwindcss-animate": "1.0.7",
    "vaul": "1.1.2",
    "zustand": "5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "^9.13.0",
    "@playwright/test": "1.49.1",
    "@testing-library/react": "16.1.0",
    "@types/eslint__js": "^8.42.3",
    "@types/file-saver": "2.0.7",
    "@types/lodash": "4.17.13",
    "@types/node": "22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@types/react-transition-group": "4.4.12",
    "@types/wicg-file-system-access": "2023.10.5",
    "@vite-pwa/assets-generator": "0.2.6",
    "@vitejs/plugin-react-swc": "3.7.2",
    "autoprefixer": "10.4.20",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "happy-dom": "15.11.7",
    "i18next-parser": "9.0.2",
    "knip": "5.41.0",
    "npm-run-all2": "7.0.2",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-tailwindcss": "0.6.9",
    "pwa-asset-generator": "6.4.0",
    "tailwindcss": "3.4.17",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.0",
    "vite": "6.0.3",
    "vite-plugin-pwa": "0.21.1",
    "vitest": "2.1.8"
  }
}
